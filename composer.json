{
    "name": "anrw/wp-scratch-theme",
    "type": "Wordpress-theme",
    "description": "Wordpress Theme Boilerplate",
    "license": "GNU GPL",
    "authors": [
        {
            "name": "Andrew Tolochka",
            "email": "atolochka@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.6.0",
        "windwalker/renderer": "2.*",
        "illuminate/view": "4.*",
        "composer/installers": "^1.0"
    },
    "require-dev": {
        "wp-coding-standards/wpcs": "dev-master",
        "phpmd/phpmd": "@stable"
    },
    "autoload": {
        "psr-4": {
            "Classy\\": "app/core/classes",
            "Classy\\Models\\": "app/core/models"
        }
    },
    "scripts": {
        "cs": "phpcs --standard=phpcs.ruleset.xml app/ -s",
        "md": "phpmd app text phpmd.ruleset.xml"
    }
}
